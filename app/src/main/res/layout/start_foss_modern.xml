<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Wood Texture Background -->
    <ImageView
        android:id="@+id/wood_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wood_texture_overlay"
        android:alpha="0.3"
        android:scaleType="fitXY"/>

    <!-- Top Currency Bar -->
    <LinearLayout
        android:id="@+id/currency_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/currency_bar_bg"
        android:elevation="8dp"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Player Profile -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <!-- Avatar Frame -->
            <ImageView
                android:id="@+id/avatar_frame"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/avatar_frame_bg"
                android:elevation="4dp"/>

            <!-- Avatar Initial -->
            <TextView
                android:id="@+id/avatar_text"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:background="#E74C3C"
                android:text="M"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Level Badge -->
            <TextView
                android:id="@+id/level_badge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/avatar_frame"
                android:layout_alignEnd="@id/avatar_frame"
                android:layout_marginBottom="-8dp"
                android:layout_marginEnd="-8dp"
                android:background="@drawable/avatar_frame_bg"
                android:elevation="6dp"
                android:text="1"
                android:textColor="@color/backgroundColor"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Currency Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Gems -->
            <LinearLayout
                android:id="@+id/gem_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gem_currency_bg"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸ’Ž"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/gems_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,250"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/add_gems"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/add_button_bg"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Coins -->
            <LinearLayout
                android:id="@+id/coin_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coin_currency_bg"
                android:elevation="4dp"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸª™"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/coins_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/add_coins"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/add_button_bg"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/currency_bar"
        android:layout_above="@+id/bottom_navigation"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Chess Logo -->
            <TextView
                android:id="@+id/chess_logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/chess_logo_bg"
                android:text="â™”"
                android:textSize="80sp"
                android:textColor="@color/backgroundColor"
                android:gravity="center"
                android:elevation="10dp"
                android:fontFamily="serif"/>

            <!-- Game Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:maxWidth="400dp">

                <!-- Classic Chess Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_classic_chess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/StartCard"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_classic_chess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/ClassicChessButton"
                            android:text="Classic Chess"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Chess Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_quick_chess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/StartCard"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_quick_chess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/QuickChessButton"
                            android:text="Quick Chess"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Legacy Features Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_more_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/StartCard"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_more_features"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/GlossyButton"
                            android:background="@drawable/more_features_button_bg"
                            android:text="More Features"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/nav_icon_home_bg"
                android:elevation="6dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Friends -->
        <LinearLayout
            android:id="@+id/nav_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/nav_icon_bg"
                android:elevation="3dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Equipment (Chess Knight) -->
        <LinearLayout
            android:id="@+id/nav_equipment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="-15dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/nav_icon_home_bg"
                android:elevation="6dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chess"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Events -->
        <LinearLayout
            android:id="@+id/nav_events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/nav_icon_bg"
                android:elevation="3dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Shop -->
        <LinearLayout
            android:id="@+id/nav_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/nav_icon_bg"
                android:elevation="3dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>