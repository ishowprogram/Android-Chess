<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow Layer -->
            <item android:top="4dp" android:left="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#80000000"/>
                </shape>
            </item>
            <!-- Main Button -->
            <item android:top="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <gradient
                        android:startColor="#9C27B0"
                        android:endColor="#7B1FA2"
                        android:angle="135"/>
                </shape>
            </item>
            <!-- Top Highlight -->
            <item android:bottom="10dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <gradient
                        android:startColor="#E1BEE7"
                        android:endColor="#00FFFFFF"
                        android:angle="270"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Shadow Layer -->
            <item android:top="4dp" android:left="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#80000000"/>
                </shape>
            </item>
            <!-- Main Button -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <gradient
                        android:startColor="#BA68C8"
                        android:endColor="#9C27B0"
                        android:angle="135"/>
                </shape>
            </item>
            <!-- Top Highlight -->
            <item android:bottom="12dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <gradient
                        android:startColor="#F3E5F5"
                        android:endColor="#00FFFFFF"
                        android:angle="270"/>
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <stroke android:width="3dp" android:color="#6A1B9A"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>